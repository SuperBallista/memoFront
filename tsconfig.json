{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions":true,
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["node"],  
    "moduleResolution": "bundler",  
    "module": "ES2015",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": ["src/**/*"],  
  "exclude": ["node_modules"]
}
