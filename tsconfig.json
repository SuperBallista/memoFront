{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "verbatimModuleSyntax": true,
      "types": ["svelte", "node"],
      "outDir": "dist",
      "rootDir": "../",
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/*"],
        "@svelteSrc/*": ["../front/src/*"]
      }
    },
    "include": ["src/**/*", "../front/*"],
    "exclude": ["node_modules"]
  }
  